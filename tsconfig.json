{
  "compilerOptions": {
    "target": "es2017",// "es5",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "./dist",
    "jsx": "react",
    "rootDir": ".",
    "baseUrl": "./src",
    "module": "es6",

    //"Need "moduleResolution": "node", and "skipLibCheck": true,  to be able to run yarn build"
    "moduleResolution": "node",
    "skipLibCheck": true,
    "paths": {
      "@widgets/*": [
        "./src/*",
        "./src/*/index",
        "src/*"
      ]
    }
  },
  "exclude": [
    "dist",
    "node_modules",
    "src/**/*.test.tsx",
    "babel.config.js"
  ],
  "ts-node": {
//    "transpileOnly": true,
//    "compilerOptions": {
//      "module": "ESNext",
//      "esModuleInterop": true
//    },
    "esm": true // <--- this is the most important part
  }
}
