{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "./dist",
    "jsx": "react",
    "rootDir": ".",
    "baseUrl": "./src",
    "paths": {
      "@widgets/*": ["./src/*","./src/*/index","src/*"]
    }
  },
  "exclude": [
    "dist",
    "node_modules",
    "src/**/*.test.tsx",
    "babel.config.js"
  ]
}
