{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "./dist",
    "jsx": "react",
    "rootDir": "."
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx","index.ts"],
  "exclude": ["node_modules"]
}
