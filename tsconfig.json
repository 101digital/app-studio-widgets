{
  "compilerOptions": {
    "target": "es5",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "./dist",
    "jsx": "react",
    "rootDir": ".",
    "baseUrl": "./src",
    "module": "es6",

    //"Need "moduleResolution": "node", and "skipLibCheck": true,  to be able to run yarn build"
//    "moduleResolution": "node",
    "skipLibCheck": false,
    "paths": {
      "@widgets/*": [
        "./src/*",
        "./src/*/index",
        "src/*"
      ]
    }
  },
  "exclude": [
    "dist",
    "node_modules",
    "src/**/*.test.tsx",
    "babel.config.js"
  ]
}
